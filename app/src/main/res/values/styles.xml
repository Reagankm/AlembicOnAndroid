<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/primary_light</item>
    </style>

    <!-- ListView Theme. -->
    <style name="ListTheme" parent="@android:style/Widget.ListView">
        <!-- Remove the divider -->
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@null</item>
        <!-- Increase text size -->
        <!--item name="android:listSelector">@color/primary_dark</item-->
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>

    <!-- List RatingBar Theme (color of regular but size of indicator)-->
    <!--Base.Widget.AppCompat.RatingBar -->
    <!--style name="RatingBarInRow" parent="style/Base.Widget.AppCompat.RatingBar" >

        <item name="android:minHeight">38dip</item>
        <item name="android:maxHeight">38dip</item>


    </style -->

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
